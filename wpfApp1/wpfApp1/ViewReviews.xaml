        <Frame Content="Hours&#xD;&#xA;Mon-&#xD;&#xA;Fri&#xD;&#xA;12-10" HorizontalAlignment="Left" Height="128" Margin="157,113,0,0" VerticalAlignment="Top" Width="39" Navigated="Frame_Navigated_1"/>
