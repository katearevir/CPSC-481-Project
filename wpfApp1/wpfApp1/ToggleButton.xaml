<UserControl x:Class="trvlApp.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trvlApp"
             mc:Ignorable="d" Height="161" Width="405">

    <Viewbox Stretch="Uniform" Margin="0,-18,0,0">
        <Grid HorizontalAlignment="Center" Height="133" VerticalAlignment="Center" Width="279">
            <Rectangle x:Name="ToggleButtonBackground" HorizontalAlignment="Center" Width="277" RadiusX="60.334" RadiusY="60.334" Fill="#FFA0A0A0" Margin="0,0,0,10" Height="114" VerticalAlignment="Bottom" MouseLeftButtonDown="toggleBackgroundDown"/>
            <Ellipse x:Name="ToggleButtonCircle" HorizontalAlignment="Center" Height="105" VerticalAlignment="Center" Width="105" Fill="White" MouseLeftButtonDown="toggleCircleButtonDown"/>
        </Grid>
    </Viewbox>


</UserControl>
