<UserControl x:Class="trvlApp.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trvlApp"
             mc:Ignorable="d" Height="127" Width="317">

    <Viewbox Margin="0">
        <Grid HorizontalAlignment="Left" Height="118" Margin="0" VerticalAlignment="Center" Width="279">
            <Rectangle x:Name="ToggleButtonBackground" RadiusX="60" RadiusY="60" Fill="#FFA0A0A0" Height="114" VerticalAlignment="Center" MouseLeftButtonDown="toggleBackgroundDown"/>
            <Ellipse x:Name="ToggleButtonCircle" HorizontalAlignment="Center" Height="106" VerticalAlignment="Center" Width="104" Fill="White" MouseLeftButtonDown="toggleCircleButtonDown" />
        </Grid>
    </Viewbox>


</UserControl>
